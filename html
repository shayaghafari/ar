    .card{background:linear-gradient(180deg,var(--card),#07101a);border-radius:12px;padding:14px;box-shadow:0 8px 28px rgba(2,6,23,0.7);border:1px solid rgba(255,255,255,0.03)}
    .viewer-wrap{margin-top:14px;border-radius:10px;overflow:hidden;border:1px solid rgba(255,255,255,0.03)}
    model-viewer{width:100%;height:70vh;min-height:420px;background:linear-gradient(180deg,#071428,#04101a);display:block}
